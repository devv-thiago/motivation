<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:background="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:padding="8dp">

       <ImageView
           android:layout_weight="1"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:src="@drawable/baseline_all_inclusive_24"
           />

        <ImageView
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_tag_faces_24"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_wb_sunny_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_username"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_centerInParent="true"
        android:text="OlÃ¡ kotlin"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/phrases_motivation"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_below="@+id/text_phrase"
        android:layout_centerInParent="true"
        android:background="@color/dark_purple"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/button_newPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/dark_purple"
        android:text="@string/new_phrase"
        />

</RelativeLayout>